# Analog_Bridge environment variables
# This file should be used in conjunction with common.env.example
# Copy these files to .env.analog_bridge and .env.common respectively

# =============================================================================
# ANALOG_BRIDGE SPECIFIC SETTINGS
# =============================================================================

# Metadata management
EXPORT_METADATA=true
TRANSFER_ROOT_DIR=/tmp
SUBSCRIBER_FILE=/var/lib/dvswitch/subscriber_ids.csv

# Vocoder settings
DECODER_FALLBACK=true
USE_EMULATOR=false
EMULATOR_ADDRESS=127.0.0.1:2470

# Audio processing settings
USRP_AUDIO=AUDIO_UNITY
USRP_GAIN=1.10
USRP_AGC=-20,10,100
TLV_AUDIO=AUDIO_UNITY
TLV_GAIN=0.35

# AMBE mode (DMR, DMR_IPSC, DSTAR, NXDN, P25, YSFN, YSFW)
AMBE_MODE=DMR

# Minimum transmission time in milliseconds
MIN_TX_TIME_MS=2500

# =============================================================================
# GATEWAY SETTINGS
# =============================================================================

# Gateway DMR ID (7-digit DMR ID, same as MY_DMR_ID)
# Format: 7 digits (e.g., 1234567)
# Leave commented for automatic calculation from MY_DMR_ID, or set a custom value to override
# GATEWAY_DMR_ID=

# Repeater ID (7-digit DMR ID + 2-digit ESSID)
# Format: MY_DMR_ID + MY_ESSID (e.g., 1234567 + 01 = 123456701)
# Leave commented for automatic calculation, or set a custom value to override
# REPEATER_ID=

# Default talkgroup for gateway transmissions
GATEWAY_TALKGROUP=9

# Default timeslot for gateway transmissions
GATEWAY_TIMESLOT=2

# DMR color code
DMR_COLOR_CODE=1

# =============================================================================
# NETWORK PORTS
# =============================================================================

# USRP ports (Analog_Bridge <-> Analog_Reflector)
USRP_RX_PORT=32001
USRP_TX_PORT=32002

# AMBE peer settings (Analog_Bridge <-> MMDVM_Bridge)
AMBE_PEER_HOST=mmdvm_bridge
AMBE_RX_PORT=32003
AMBE_TX_PORT=32004

# PCM port (Analog_Bridge)
PCM_PORT=2222

# =============================================================================
# OVERRIDE SHARED VALUES (if needed)
# =============================================================================

# Uncomment and modify these if you need different values for Analog_Bridge
# MY_CALLSIGN=DIFFERENT_CALL
# MY_DMR_ID=DIFFERENT_ID
# MY_ESSID=DIFFERENT_ESSID

