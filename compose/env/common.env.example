# Common environment variables shared across all DVSwitch services
# Copy this file to .env.common and customize for your setup

# =============================================================================
# RADIO IDENTITY
# =============================================================================

# Your amateur radio callsign
MY_CALLSIGN=N0CALL

# Your DMR ID (7 digits)
MY_DMR_ID=1234567

# Your ESSID (2 digits, usually 01 for primary)
MY_ESSID=01

# =============================================================================
# Security
# =============================================================================

# Client token for mobile app authentication (optional)
CLIENT_TOKEN=


# =============================================================================
# DMR NETWORK SETTINGS
# =============================================================================

# BrandMeister master server
BM_MASTER_HOST=master.example.org
BM_MASTER_PORT=62031
BM_PASSWORD=changeme

# Talkgroup settings
DEFAULT_TALKGROUP=91
DEFAULT_SLOT=2

# DMR options string
DMR_OPTIONS=StartRef=4000;RelinkTime=30;Userlink=1;TS2_1=91;TS2_2=9

# =============================================================================
# LOGGING
# =============================================================================

# Log level (0=No logging, 1=Debug, 2=Message, 3=Info, 4=Warning, 5=Error, 6=Fatal)
LOG_LEVEL=1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to true in CI/local to avoid requiring live connectivity
DUMMY_MODE=false
